@model ShippingDetailsViewModel

@{ 
    Layout = "_Layout";
}

    <form asp-controller="Cart" asp-action="Complete" method="post">
        <div class="form-group">
            <label asp-for="ShippingDetail.Name">İsim:</label>
            <input asp-for="ShippingDetail.Name" class="form-control" placeholder="Müşteri Adı" />
            <span class="bg-warning" asp-validation-for="ShippingDetail.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.LastName">Soyisim:</label>
            <input asp-for="ShippingDetail.LastName" class="form-control" placeholder="Müşteri Soyisimi" />
            <span asp-validation-for="ShippingDetail.LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Email">Email:</label>
            <input asp-for="ShippingDetail.Email" class="form-control" placeholder="E-Posta" />
            <span asp-validation-for="ShippingDetail.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.City">Şehir:</label>
            <input asp-for="ShippingDetail.Name" class="form-control" placeholder="Şehir" />
            <span asp-validation-for="ShippingDetail.City"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingDetail.Address">Adres:</label>
            <input asp-for="ShippingDetail.Name" class="form-control" placeholder="Adres" />
            <span asp-validation-for="ShippingDetail.Address"></span>
        </div>
        <input type="submit" value="Kaydet" class="btn btn-success btn-group-sm" />
    </form>